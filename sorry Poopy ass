    <script>
        let clickCount = 0;
        
        const apologyMessages = [
            "ðŸ˜¢ I'm sorry and I love you Poopy Ass Paisa",
            "ðŸ˜­ I'm so sorry and I love you Poopy Ass Paisa",
            "ðŸ˜” I'm really sorry and I love you Poopy Ass Paisa",
            "ðŸ¥º I'm deeply sorry and I love you Poopy Ass Paisa",
            "ðŸ˜¿ I'm truly sorry and I love you Poopy Ass Paisa",
            "ðŸ’” I'm terribly sorry and I love you Poopy Ass Paisa",
            "ðŸ˜ž I'm sincerely sorry and I love you Poopy Ass Paisa",
            "ðŸ˜¢ I'm incredibly sorry and I love you Poopy Ass Paisa",
            "ðŸ˜­ I'm profoundly sorry and I love you Poopy Ass Paisa",
            "ðŸ˜” I'm absolutely sorry and I love you Poopy Ass Paisa",
            "ðŸ¥º I'm completely sorry and I love you Poopy Ass Paisa",
            "ðŸ˜¿ I'm utterly sorry and I love you Poopy Ass Paisa",
            "ðŸ’” I'm genuinely sorry and I love you Poopy Ass Paisa",
            "ðŸ˜ž I'm wholeheartedly sorry and I love you Poopy Ass Paisa",
            "ðŸ˜¢ I'm extremely sorry and I love you Poopy Ass Paisa"
        ];

        function showApology() {
            clickCount++;
            const messageBox = document.getElementById('messageBox');
            const clickCountElement = document.getElementById('clickCount');
            
            // Remove show class first
            messageBox.classList.remove('show');
            
            // After a brief delay, update content and show
            setTimeout(() => {
                const randomMessage = apologyMessages[Math.floor(Math.random() * apologyMessages.length)];
                messageBox.innerHTML = randomMessage;
                messageBox.classList.add('show');
                clickCountElement.textContent = `Clicks: ${clickCount}`;
            }, 200);
        }

        // Initialize with first message
        window.onload = function() {
            setTimeout(() => {
                document.getElementById('messageBox').innerHTML = "Click the button above to see an apology! ðŸ‘†";
                document.getElementById('messageBox').classList.add('show');
            }, 500);
        };
